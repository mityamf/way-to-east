extends ../base/layout

include ../components/article
include ../components/link-details
include ../components/hotel-preview
include ../components/button
include ../components/link-back

block data
  include ../data/article-content
  include ../data/inner-hotels

block variables
  - var title = "Особенности гостеприимства в Японии"
  - var wrapperMod = ""
  - var hasHeader = true
  - var headerMod = "inner"
  - var hasFooter = true
  - var footerMod = ""
  - var currentPage = ""

block main
  main
    .page-content
      +link-back("Назад")
      .container
        h1 Особенности гостеприимства в Японии
        +article(japanDetails)
        h2.page-content__title Вас может заинтересовать
        section.hotels.inner-hotels
          ul
            li
              +hotel-preview("inner", peninsulaTokio)
            li
              +hotel-preview("inner", hotelOkuraCobe)
          +button("inner-hotels", "Показать ещё")
