extends ../base/layout

include ../components/main-country-details
include ../components/hotel-preview
include ../components/link-details
include ../components/button
include ../components/page-pagination
include ../components/filter-cities
include ../components/country-mini-details

block data
  include ../data/japan-hotels
  include ../data/japan-country-details
  include ../data/cities

block variables
  - var title = "Цветущий путь на Восток — Главная"
  - var wrapperMod = ""
  - var hasHeader = true
  - var headerMod = "japan"
  - var hasFooter = true
  - var footerMod = ""
  - var currentPage = "" //- для остальных страниц пишем либо пустую строку, либо индекс

block main
  main.country-page
    .container
      .country-page__content
        h1 Япония
        +country-mini-details("country-page", japanCountryDetails)
        // +filter-cities("country-page", japanCities)
        section.country-page__hotels.hotels
          .hotels__wrapper
            each item in japanHotels1
              .hotels__item
                +hotel-preview("hotels", item)
            .country-page__countries.countries-details
              +main-country-details("countries-details", japanCountryDetails)
            each item in japanHotels2
              .hotels__item
                +hotel-preview("hotels", item)
        .country-page__pagination.pagination
          +button("pagination", "показать ещё")

