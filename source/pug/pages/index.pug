extends ../base/layout

block variables
  - var title = "Оглавление"

block main
  style.
    .container {
      padding-top: 50px;
      padding-bottom: 50px;
    }

    h1 {
      font-size: 24px;
      line-height: 28px;
    }

    a {
      color: rgb(10, 10, 175);
    }

    li {
      font-size: 18px;
      line-height: 22px;
      margin-bottom: 7px;
    }

    img {
      width: 100%;
      max-width: 300px;
      height: auto;
      display: block;
    }

    .main-index--logo {
      display: inline-block;
      vertical-align: middle;
      margin-bottom: 30px;
      padding: 20px;
      background-color: #7772c9;
    }

    @media (max-width: 768px) {
      ol {
        padding-left: 20px;
      }

      ol li {
        margin-bottom: 15px;
      }

      .container {
        padding-top: 20px;
        padding-bottom: 20px;
      }
    }

  -
    var pages = [
      {
        name: "UI Kit — components.html",
        src: "components.html"
      },
      {
        name: "Главная — main.html",
        src: "main.html"
      },
      {
        name: "Корея — korea.html",
        src: "korea.html"
      },
      {
        name: "Япония — japan.html",
        src: "japan.html"
      },
      {
        name: "Отель — hotel.html",
        src: "hotel.html"
      },
      {
        name: "Особенности Кореи — korea-details.html",
        src: "korea-details.html"
      },
      {
        name: "Особенности Японии — japan-details.html",
        src: "japan-details.html"
      },
      {
        name: "Блог — blog.html",
        src: "blog.html"
      },
    ]

  main.container.main-index
    .main-index--logo
      img(src="../../img/svg/logo.svg" width="128" height="68" alt="Логотип проекта")
    h1 Список страниц и компонентов
    ol
      each page in pages
        li
          a(href= page.src)= page.name
